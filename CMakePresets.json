{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 19,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "base",
        "hidden": true,
        "description": "Common conventions",
        "binaryDir": "${sourceDir}/builds/${presetName}"
      },
      {
        "name": "with-tests",
        "hidden": true,
        "description": "Enable testing",
        "cacheVariables": {
            "ENABLE_TESTING": true
        }
      },
      {
        "name": "ci",
        "inherits": ["base", "with-tests"],
        "displayName": "CI",
        "description": "Configuration for CI with vcpkg toolchain and multi-config Ninja project files",
        "generator": "Ninja Multi-Config",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": {
            "type": "FILEPATH",
            "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
          }
        }
      },
      {
        "name": "ci-package",
        "inherits": ["ci"],
        "displayName": "CI",
        "description": "Configuration for packaging on CI",
        "generator": "Ninja",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "RelWithDebInfo"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "ci-debug",
        "configurePreset": "ci",
        "configuration": "Debug"
      },
      {
        "name": "ci-release",
        "configurePreset": "ci",
        "configuration": "RelWithDebInfo"
      },
      {
        "name": "ci-package",
        "configurePreset": "ci-package"
      }
    ],
    "testPresets": [
      {
        "name": "ci-debug",
        "configurePreset": "ci",
        "configuration": "Debug"
      },
      {
        "name": "ci-release",
        "configurePreset": "ci",
        "configuration": "RelWithDebInfo"
      },
      {
        "name": "ci-package",
        "configurePreset": "ci-package"
      }
    ]
  }